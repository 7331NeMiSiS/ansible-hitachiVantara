class TestPassword(unittest.TestCase):
    
    def setUp(self):
        connection_info =  {
                                "address":"172.25.22.23",
                                "username":"ucpadmin",
                                "password":"Passw0rd!",
                                "connection_type":"gateway"}
        
   
        self.ConnectionInfo = ConnectionInfo(**connection_info)

    def testPassword(self):
        passwordSpec = {"password":"Passw0rd!"}
        passwordSpec = PasswordSpec(**passwordSpec)
        response = GatewayPasswordReconciler(self.ConnectionInfo).gateway_password(passwordSpec)
        print(response)

